<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryConrol.AppShell"
             xmlns:local="clr-namespace:InventoryConrol.Views"
             xmlns:y="clr-namespace:InventoryConrol"
             Shell.NavBarIsVisible="False"
             >
    <ShellItem Route="LoginPage">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}"/>
    </ShellItem>
    <ShellItem Route="MainPage">
        <ShellContent ContentTemplate="{DataTemplate y:MainPage}"/>
    </ShellItem>
    <ShellItem Route="InventoryPage1">
        <ShellContent ContentTemplate="{DataTemplate local:InvenotryPage1}"/>
    </ShellItem>
    <ShellItem Route="AddInventoryPage">
        <ShellContent ContentTemplate="{DataTemplate local:AddInventoryPage}"/>
    </ShellItem>
</Shell>