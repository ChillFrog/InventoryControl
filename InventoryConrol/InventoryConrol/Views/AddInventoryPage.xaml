<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryConrol.Views.AddInventoryPage"
             xmlns:viewmodel="clr-namespace:InventoryConrol.ViewModels"
             x:DataType="viewmodel:AddNewInventoryViewModel"
             Shell.NavBarIsVisible="True"
             Background="Black"
             x:Name="AddInventory">
    <ContentPage.Content>
        <StackLayout Padding="0,5">
            <Label Text="Название:" FontSize="Medium" Padding="3,0"/>
            <Entry  Placeholder="Название"/>
            <Label Text="Количество:" FontSize="Medium" Padding="3,0" />
            <Entry  Placeholder="Количество"/>
            <Label Text="Количество:" FontSize="Medium" Padding="3,0" />
            <Entry  Placeholder="Количество"/>
            <Button Command="{Binding SaveCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>